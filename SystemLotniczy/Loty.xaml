<Window x:Class="SystemLotniczy.Loty"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemLotniczy"
        mc:Ignorable="d"
        Title="Loty" Height="450" Width="800">
    <DataGrid x:Name="gridLoty" AutoGenerateColumns="False">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Klient" Binding="{Binding klient}"/>
            <DataGridTextColumn Header="Samolot" Binding="{Binding nazwa_samolotu}"/>
            <DataGridTextColumn Header="Data odlotu" Binding="{Binding data_odlotu}"/>
            <DataGridTextColumn Header="Dokąd" Binding="{Binding miejsce_docelowe}"/>
            <DataGridTextColumn Header="Cena" Binding="{Binding cena}"/>
        </DataGrid.Columns>
    </DataGrid>
</Window>
